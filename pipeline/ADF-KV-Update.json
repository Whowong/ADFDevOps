{
	"name": "ADF-KV-Update",
	"properties": {
		"activities": [
			{
				"name": "Get Secret From KeyVault",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": true,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": {
						"value": "@variables('KeyVaultSecretDemo')",
						"type": "Expression"
					},
					"method": "GET",
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.net"
					}
				}
			},
			{
				"name": "Set variable1",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Get Secret From KeyVault",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "KeyVaultSecretDemo",
					"value": {
						"value": "@activity('Get Secret From KeyVault').output.value",
						"type": "Expression"
					}
				}
			}
		],
		"variables": {
			"KeyVaultSecretDemo": {
				"type": "String"
			}
		},
		"annotations": []
	}
}